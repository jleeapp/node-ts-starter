{
  "compilerOptions": {
    "target": "ES2020", // Use a more recent target for modern features
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src", // Specify the root directory of input files
    "sourceMap": true, // Enable source maps for debugging
    "noImplicitAny": true, // Ensure all variables have a type
    "moduleResolution": "node", // Use Node.js module resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "types": ["node"] // Include type definitions for Node.js
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
